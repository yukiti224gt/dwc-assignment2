<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
<table>
  <tr>
    <td>Title</td>
    <td>Body</td>
  </tr>
  
    <% @books.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to "Show", book_path(b) %></td>
        <td><%= link_to "Edit", edit_book_path(b) %></td>
        <td><%= link_to "Destroy", book_path(b), method: :delete, data:{confirm:"Are you sure?"} %></td>
      </tr> 
    <% end %>
  
</table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <%= @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Body</h4>
  <%= f.text_area:body %>
  
  <%= f.submit "Create Book" %>
<% end %>