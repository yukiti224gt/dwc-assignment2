  <ul class="error-message">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <div class="form">
    <p>Title</p>
    <%= f.text_field:title %>
  </div>
  <div class="form">
    <p>Body</p>
    <%= f.text_area:body %>  
  </div>
  
  <div class="form">
    <%= f.submit "Update Book" %>
  </div>
<% end %>
